root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_spaces = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{py,go}]
indent_size = 4

# 2 space indentation
[*.{json,yml,yaml}]
indent_size = 2

[*.sh]
indent_size = 2

[*.{adoc,md}]
trim_trailing_whitespace = false
indent_size = 2
