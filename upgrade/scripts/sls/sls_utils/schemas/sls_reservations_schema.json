{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://github.com/Cray-HPE/hms-sls/schemas/sls_reservations_schema.json",
    "title": "SLS Reservations Schema",
    "IPReservations": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "Name": {
                    "type": "string"
                },
                "IPAddress": {
                    "type": "string",
                    "format": "ipv4"
                },
                "Aliases": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "Comment": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "Name",
                "IPAddress"
            ]
        }
    }
}